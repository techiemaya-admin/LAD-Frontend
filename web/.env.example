# ==================================================
# LAD FRONTEND - ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env.local for development
# Create .env.production for production builds
# NEVER commit .env files to version control
# ==================================================

# ============ ENVIRONMENT ============
NODE_ENV=production
# Options: development, production

# ============ API CONFIGURATION ============
# REQUIRED - Backend API URLs
# NO localhost URLs in production!

NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# Main API URL for SDK

NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.com
# Base API URL

NEXT_PUBLIC_BACKEND_URL=https://backend.yourdomain.com
# Backend service URL

NEXT_PUBLIC_API_BASE=https://api.yourdomain.com
# Alternative API base (fallback)

NEXT_PUBLIC_SOCKET_URL=https://socket.yourdomain.com
# WebSocket URL for real-time features

NEXT_PUBLIC_STS_SERVICE=https://sts.yourdomain.com
# STS service URL (if applicable)

# Internal backend URL (for server-side calls)
BACKEND_INTERNAL_URL=http://backend-internal:3004
# Internal network URL for server-side API calls
# Can use internal Kubernetes service names or Docker network names

# ============ API PROXY CONFIGURATION ============
NEXT_PUBLIC_USE_API_PROXY=false
# Set to 'true' to use Next.js API routes as proxy (local dev only)
# Set to 'false' for direct backend calls (production)

# ============ STRIPE CONFIGURATION ============
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
# Stripe publishable key (use pk_test_ for development)

STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
# Stripe secret key (server-side only)
# NEVER expose this in client-side code

# ============ AUTHENTICATION ============
NEXTAUTH_URL=https://app.yourdomain.com
# Your application URL

NEXTAUTH_SECRET=your_nextauth_secret_minimum_32_characters_here
# Generate: openssl rand -base64 32

# ============ ANALYTICS & MONITORING ============
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# Google Analytics Measurement ID (optional)

# ============ FEATURE FLAGS ============
NEXT_PUBLIC_ENABLE_VOICE_AGENT=true
# Enable voice agent features

NEXT_PUBLIC_ENABLE_APOLLO_LEADS=true
# Enable Apollo leads integration

NEXT_PUBLIC_ENABLE_CAMPAIGNS=true
# Enable campaign features

# ============ BUILD CONFIGURATION ============
NEXT_TELEMETRY_DISABLED=1
# Disable Next.js telemetry

# ============ DEVELOPMENT ONLY ============
# These variables are only for local development
# DO NOT set in production

# Local development API URLs (for .env.local only)
# NEXT_PUBLIC_API_URL=http://localhost:5001
# NEXT_PUBLIC_BACKEND_URL=http://localhost:3002
# NEXT_PUBLIC_SOCKET_URL=http://localhost:3004
# BACKEND_INTERNAL_URL=http://localhost:3004
